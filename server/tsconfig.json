{
  "compilerOptions": {
    "module": "CommonJS",
    "target": "ES6",
    "outDir": "./built",
    "rootDir": "./",
    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "typeRoots": ["./**/*"]
  },
  "include": [
    "src/**/*",
    "lib/**/*",
    "src/types/declarations.d.ts",
    "lib/constants.ts",
    "../lib/ChromaClient.ts",
    "lib/ChromaClient.ts",
    "lib/utils.ts"
  ],
  "paths": {
    "*": ["node_modules/*", "src/types/*"]
  }
}
