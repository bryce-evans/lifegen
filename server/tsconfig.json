{
  "compilerOptions": {
    "module": "CommonJS",
    "target": "ES6",
    "outDir": "./built",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "typeRoots": ["./**/*"]
  },
  "include": ["src/**/*", "src/types/declarations.d.ts"],
  "paths": {
    "*": ["node_modules/*", "src/types/*"]
  }
}
